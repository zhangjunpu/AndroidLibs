<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <TextView
        android:id="@+id/btnList"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="ListDialog"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/btnEdit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="EditDialog"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/btnRecycler"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="RecyclerDialog"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/btnLoading"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="LoadingDialog"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/btnToast"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="ToastDialog"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/btnNumberPicker"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="NumberPicker"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/btnAge"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="AgeDialog"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/btnDate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="DateDialog"
        android:textAllCaps="false" />
</LinearLayout>