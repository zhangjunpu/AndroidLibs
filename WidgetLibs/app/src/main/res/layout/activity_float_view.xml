<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.junpu.widget.sample.ui.FloatViewActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:background="@color/accent_yellow">

        <com.junpu.widget.floatview.FloatViewGroup
            android:id="@+id/floatView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/floatChild"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="2dp"
                android:src="@drawable/selector_send_report"
                android:translationZ="2dp" />
        </com.junpu.widget.floatview.FloatViewGroup>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
