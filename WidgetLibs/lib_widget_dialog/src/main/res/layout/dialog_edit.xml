<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="38dp"
    android:background="@drawable/dialog_edit_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingTop="28.8dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28.8dp"
        android:layout_marginEnd="28.8dp"
        android:layout_marginBottom="23.1dp"
        android:textColor="@color/dialog_edit_text"
        android:textSize="21.1sp"
        android:visibility="visible"
        tools:text="备注" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28.8dp"
        android:layout_marginEnd="28.8dp"
        android:layout_marginBottom="28.8dp"
        android:background="@drawable/dialog_edit_input_bg"
        android:paddingStart="9.7dp"
        android:paddingTop="13dp"
        android:paddingEnd="9.7dp"
        android:paddingBottom="13dp"
        android:textColor="@color/dialog_edit_text"
        android:textSize="15.4sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/dialog_edit_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44.6dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_item_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/dialog_edit_text"
            android:textSize="15.4sp" />

        <TextView
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="@color/dialog_edit_line" />

        <TextView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_item_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/dialog_save"
            android:textColor="@color/colorAccentDialog"
            android:textSize="15.4sp" />

    </LinearLayout>
</LinearLayout>
